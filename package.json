{
  "name": "hardhat-proxy-boilerplate",
  "description": "Boilerplate for building and deploying common solidity contracts with hardhat",
  "version": "1.0.0",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "test": "npx hardhat compile && npx hardhat test",
    "deploy:localhost:basic-token": "npx hardhat ignition deploy ./ignition/modules/BasicToken/0_BasicToken.ts --network localhost",
    "deploy:amoy:basic-token": "npx hardhat ignition deploy ./ignition/modules/BasicToken/0_BasicToken.ts --network amoy",
    "deploy:localhost:upgradable-nft-v1": "npx hardhat ignition deploy ./ignition/modules/UpgradableNft/0_UpgradableNftProxy.ts --network localhost",
    "deploy:amoy:upgradable-nft-v1": "npx hardhat ignition deploy ./ignition/modules/UpgradableNft/0_UpgradableNftProxy.ts --network amoy",
    "deploy:localhost:upgradable-nft-v2": "npx hardhat ignition deploy ./ignition/modules/UpgradableNft/UpgradeV2/1_UpgradableNftV2.ts --network localhost && npx hardhat ignition deploy ./ignition/modules/UpgradableNft/UpgradeV2/2_UpgradableNftV2_Upgrade.ts --network localhost",
    "deploy:amoy:upgradable-nft-v2": "npx hardhat ignition deploy ./ignition/modules/UpgradableNft/UpgradeV2/1_UpgradableNftV2.ts --network amoy && npx hardhat ignition deploy ./ignition/modules/UpgradableNft/UpgradeV2/2_UpgradableNftV2_Upgrade.ts --network amoy"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-ethers": "^3.0.8",
    "@nomicfoundation/hardhat-ignition": "^0.15.11",
    "@nomicfoundation/hardhat-ignition-viem": "^0.15.11",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.12",
    "@nomicfoundation/hardhat-toolbox-viem": "^3.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.12",
    "@nomicfoundation/hardhat-viem": "^2.0.6",
    "@nomicfoundation/ignition-core": "^0.15.11",
    "@nomiclabs/hardhat-etherscan": "^3.1.8",
    "@openzeppelin/contracts": "^5.1.0",
    "@openzeppelin/hardhat-upgrades": "^3.9.0",
    "@types/chai": "^4.3.20",
    "@types/chai-as-promised": "^7.1.8",
    "@types/mocha": "^10.0.10",
    "chai": "^4.5.0",
    "hardhat": "^2.22.16",
    "hardhat-gas-reporter": "^2.3.0",
    "solidity-coverage": "^0.8.16",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3",
    "viem": "^2.21.49"
  },
  "dependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.8",
    "@nomicfoundation/hardhat-ignition-ethers": "^0.15.9",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@openzeppelin/contracts-upgradeable": "^5.1.0",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "dotenv": "^16.4.5",
    "typechain": "^8.3.2"
  }
}